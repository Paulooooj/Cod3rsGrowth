<mvc:View xmlns:calendar="sap.ui.unified.calendar" xmlns:tnt="sap.tnt"
   controllerName="ui5.cod3rsgrowth.controller.Empresa"
   xmlns="sap.m"
   xmlns:mvc="sap.ui.core.mvc"
   xmlns:core="sap.ui.core"
   xmlns:f="sap.f">
   <Page title="{i18n>nomeDaPaginaEmpresa.titulo}" >  
      <customHeader>
        <Toolbar >
         <Title text="{i18n>nomeDaPaginaEmpresa.titulo}" titleStyle="H4"></Title>
        </Toolbar>
      </customHeader>
      <Table
         id="listaEmpresa"
         growing="true"
         sticky="ColumnHeaders,HeaderToolbar"
			width="auto"
			fixedLayout="false"
			autoPopinMode="true"
			hiddenInPopin="None"
         items="{listaEmpresa>/}">
         <headerToolbar>
            <Toolbar >
               <Title text="{i18n>nomeBarraDeFerramentas} ({= ${listaEmpresa>/}.length})" />
               <ToolbarSpacer />
               <Text text="Filtros:"/>
               <SearchField 
               id="searchField"
               width="20%"
               placeholder="{i18n>barraDePesquisaEmpresa}"
               liveChange="onfiltroEmpresa"/>
               <ComboBox 
               placeholder="Ramo"
               selectionChange="filtroCombobox"
             > 
               <core:ListItem key="1" text="Todos"/>
               <core:ListItem key="2" text="Industria"/>
               <core:ListItem key="3" text="Comercio"/>   
               <core:ListItem key="4" text="Servico"/>                  
             </ComboBox>
               <Button
               id="downloadSelectedButton"
               text="Adicionar"
               enabled="true"
               icon="sap-icon://sys-add"/>
            </Toolbar>
         </headerToolbar>
         <columns> 
            <Column 
            minScreenWidth="Small"
            demandPopin="true"
            vAlign="Middle"
            hAlign="Begin"
           >
               <header>
                  <Label text="{i18n>nomeColuna.razaoSocial}"/>
               </header>
            </Column>
            <Column 
            minScreenWidth="Small"
            demandPopin="true"
            vAlign="Middle"
            hAlign="Center">
               <header>
                  <Label text="{i18n>nomeColuna.cnpj}"/>
               </header>
            </Column>
            <Column 
            minScreenWidth="Small"
            demandPopin="true"
            vAlign="Middle"
            hAlign="Center">
               <header>
                  <Label text="{i18n>nomeColuna.ramo}"/>
               </header>
            </Column>
            <Column hAlign="End"/>
         </columns>
         <items>
            <ColumnListItem type="Active">
               <cells>
                  <ObjectIdentifier title="{listaEmpresa>razaoSocial}"/>
                  <Text text="{listaEmpresa>cnpj}"/>
                  <Text text="{listaEmpresa>ramo}"/>
               </cells>
            </ColumnListItem>
         </items>
        </Table>
   </Page>
</mvc:View>